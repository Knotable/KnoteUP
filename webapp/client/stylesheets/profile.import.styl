//
// Profile styles
// ---------------------------------------

@import 'nib'
@import 'variables.styl'

.profile-icon
  background: url("cdn_url_variable/images/profile.png") no-repeat right center
  height: 12px
  width: 12px
  background-size: 12px
  display: inline-block
  margin: 1px 0 0 0 !important

.account-avatar
  width: 30px
  height: 30px
  line-height: 30px
  display: inline-block
  box-shadow: -1px 2px 6px -2px rgba(0,0,0,0.4)
  vertical-align: top
  max-width: none
  background: white
  font-size: 22px
  cursor: initial
  font-weight: bold
  text-align: center
  border-radius: 50%
  &.small
    width: 20px
    height: 20px
    font-size: 11px
    line-height: 20px
  &.medium
    width: 24px
    height: 24px
    font-size: 14px
    line-height: 24px
  &.large
    font-size: 24px
    line-height: 34px
  &.larger
    font-size: 120px
    line-height: 180px
    font-weight: 400px
    width: 200px
    height: 200px
  &.unactivated
    border: 1px solid #555

.account-avatar img
  vertical-align: top

.participators
  display: inline-block
  float: right
  .add-contact
    background: #28ACE8
    font-size: 11px
    color: #fff
  .participator
    display: inline
