.share-popup-external-container 
  display: block
  width: 100%


.share-popup-centered-container 
  background: url("/images/_bg1.png") repeat left top
  box-shadow: 0 1px 2px 0px rgba(0, 0, 0, 0.33)
  width: 600px
  height: 400px
  margin: 0 auto
  border-radius: 2px


.share-popup-above-header 
  height: 1px


.share-popup-header-container 
  padding-bottom: 10px
  margin: 9px 20px 0px 20px
  background-color: rgba(0, 0, 0, 0.05)
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)


.share-popup-header 
  padding-top: 10px
  font-weight: bold
  text-align: center
  font-size: 16px
  line-height: 1.3
  color: #666
  top: 50%


.share-popup-internal-container 
  padding: 0 20px 20px 20px


.share-content-card 
  background-color: white
  padding: 20px 20px 20px 20px
  margin: 20px 0
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)


.share-content-card-content 
  text-align: left
  margin-left: 10px
  font-size: 14px
  line-height: 1.3
  color: #666
  top: 50%
  i 
    font-size: 20px
    line-height: 20px
    height: 20px
    width: 20px
    margin-left: 0
    margin-right: 0
    &:before 
      font-size: 20px
      line-height: 20px
      height: 20px
      width: 20px
      margin-left: 0
      margin-right: 0
    &.everythings-ok 
      &:before 
        font-size: 30px
        color: rgba(40, 172, 232, 1)
    
  
  .selectric-wrapper 
    display: inline-block
    min-width: 150px
  

#authorize-slack-for-knotable-link 
  color: rgba(40, 172, 232, 1)
  border-bottom: 1px dashed
  text-decoration: none


.share-popup-buttons-container 
  position: absolute
  bottom: 0
  right: 0
  padding: 20px 20px 10px 20px


.share-popup-button 
  display: inline-block
  margin: 0 0 0 15px
  padding: 0
  border: 0
  cursor: pointer
  font-family: "Open Sans", sans-serif
  &:active 
    box-shadow: inset 1px 1px 1px 0px rgba(0, 0, 0, 0.33) !important
  
  &:disabled 
    box-shadow: 0 0 0 0 rgba(0, 0, 0, 0.33) !important
    cursor: default


.share-popup-button-content 
  text-align: left
  font-size: 14px
  line-height: 1.3
  color: #fff
  top: 50%
  padding: 10px 15px


#share-ok 
  background-color: rgba(40, 172, 232, 1)
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)
  &:hover 
    background-color: rgba(40, 172, 232, 0.87)
  &:disabled 
    background-color: rgba(40, 172, 232, 0.7)
  &:active 
    background-color: rgba(40, 172, 232, 0.7) !important


#share-cancel 
  background-color: rgba(0, 0, 0, 0.5)
  box-shadow: 0 1px 4px -1px rgba(0, 0, 0, 0.33)
  &:hover 
    background-color: rgba(0, 0, 0, 0.45)
  &:disabled 
    background-color: rgba(100, 100, 100, 0.5)
  &:active 
    background-color: rgba(100, 100, 100, 0.5) !important


.selectric .label,
.selectric-items li 
  color: #666
  font-size: 14px


.selectric-items 
  .disabled 
    display: none
