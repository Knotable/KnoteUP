html
  -webkit-tap-highlight-color: transparent 
  -webkit-font-smoothing: antialiased 

html
body
  height: 100%
  margin: 0

body
  font-family: "Open Sans", sans-serif
  background: url("/images/_bg1.png") repeat left top
  font-size: 12px
  overflow: hidden

ul
  list-style: none
  padding: 0
  margin: 0

input:-webkit-autofill
  box-shadow: inset 0 0 0 1000px white

.hidden
  display: none !important

.invisible
  visibility: hidden !important

.btn-full
  width: 100% !important

.btn-blue
  background: #28ade8
