@media screen and (max-width: 667px)
  body
    font-size: 14px
    & ::-webkit-scrollbar
      display: none

  .btn
    padding: 2px 10px
    margin: 0
    font-size: 14px
    line-height: 22px

  #share-pad-popup
    padding: 0
    width: 100%
    left: initial !important
    margin-left: initial !important
    .share-pad-wrapper
      padding: 20px
      .share-message
      .shared-url
        width: 95%

  #container
    box-shadow: 10px 0 10px 8px #000
    left: 0
    right: initial

    &::-webkit-scrollbar
      display: none

    #header
      z-index: 200
      .user
        right: 10px
      &.scrolling
        box-shadow: 0px 2px 12px -3px rgba(0,0,0,0.45)
      .left-header
        margin-left: 10px
        .title
          max-width: calc(100% - 145px)
          .subject
            width: 100%
            text-overflow: ellipsis
            white-space: nowrap
            overflow: hidden
        .show-compose
          position: fixed
          bottom: 20px
          right: 20px
          font-size: 20px
          width: 45px
          height: 45px
          line-height: 45px
      #setting-dropdown
        top: 50px
        right: 10px
    .padList
      overflow-x: hidden
      .pad .knote
        margin: 40px auto
        width: 100%
        padding: 15px 0
        .contact
          left: 8px
          top: -17px
          .account-avatar
            width: 26px
            height: 26px
            line-height: 26px
        .knote-title
          opacity: 1
          font-size: 14px
        .knote-content
          padding: 0 10px
        .knote-gutter
          .btn
            padding: 0px 8px
        .knote-actions
          margin-left: 10px
          height: 25px
        .knote-replys
          padding: 0 10px
          .account-avatar
            width: 26px
            height: 26px
            line-height: 26px
        .pomodoro-container
          right: 3px
          z-index: 999
        .knote-compose-popup-cn
          .contenteditable-wrapper
            padding: 0 10px 5px 10px
          .buttons
            padding-right: 10px
            .btn
              padding: 0px 8px
      .pad .compose
        width: 100%
        margin-bottom: 10px
        margin-top: 15px
        padding: 0
        border: 1px solid white
        .compose-wrapper
          margin: 10px

    #header .share-pad-btn
    .header .redirect-to-knotable
    .header .subject
      left: 10px

  .user-modal-container
    width: 90%

  .share-popup-centered-container
    width: 90%

  .header.padItem
    .subject
      padding-left: 10px
      .title
        display: inline-block
        max-width: calc(100% - 95px)
        text-overflow: ellipsis
        white-space: nowrap
        overflow: hidden
        vertical-align: middle
      .share-pad
        margin-left: 2px
    .divider:after
      margin: 0 20px 5px 10px

  #header .share-pad .share-pad-dropdown
  .share-pad .share-pad-dropdown
    right: 0
    left: auto
