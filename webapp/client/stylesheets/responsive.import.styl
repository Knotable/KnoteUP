@media screen and (max-width: 667px)
  body
    font-size: 14px
    & ::-webkit-scrollbar
      display: none
  .btn
    padding: 2px 10px
    margin: 0
    font-size: 14px
    line-height: 22px

  #container
    box-shadow: 10px 0 10px 8px #000
    left: 0
    right: initial

    &::-webkit-scrollbar
      display: none
     
    #header
      z-index: 200
      .user
        right: 10px
      &.scrolling
        box-shadow: 0px 2px 12px -3px rgba(0,0,0,0.45)
      .left-header
        margin-left: 10px
        .show-compose
          position: fixed
          bottom: 20px
          right: 20px
          font-size: 20px
          width: 45px
          height: 45px
          line-height: 45px

    .padList
      overflow-x: hidden
      .pad .knote
        margin: 40px auto
        width: 100%
        padding: 15px 0
        .knote-wrapper
          margin: 0 15px
          .contact
            top: -22px
            left: 10px
            .account-avatar
              width: 30px
              height: 30px
      .pad .compose
        width: 100%
        margin: 10px auto
        padding: 0
        border: 1px solid white
        .compose-wrapper
          margin: 10px

    #header .share-pad-btn
    .header .redirect-to-knotable
    .header .subject
      left: 10px

  .user-modal-container
    width: 90%

  .share-popup-centered-container
    width: 90%

  .header.padItem .divider:after
    margin: 0 20px 5px 10px

  #header .share-part .share-pad-dropdown
  .share-part .share-pad-dropdown
    right: 0
    left: auto
