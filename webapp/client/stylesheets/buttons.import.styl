//
// Button styles
// ---------------------------------------

@import 'nib'
@import 'variables.styl'

.btn
  display: inline-block
  padding: 4px 12px
  margin-bottom: 0
  font-size: 12px
  line-height: 20px
  color: #fff
  text-align: center
  vertical-align: middle
  cursor: pointer
  background-color: #28ACE8
  border: 1px solid rgba(0,0,0,0)
  border-radius: 2px
  box-shadow: -1px 2px 6px -2px rgba(0,0,0,0.4);
  -webkit-appearance: none
  -moz-appearance: none
  &:disabled
    background: #ddd

.my-btn
  color: $white
  background: #28ACE8
  &:disabled
  &:disabled:hover
  &[disabled]
  &:hover[disabled]
    cursor: default
    opacity: 0.6
    background: #28ACE8

.btn-small
  padding: 0px 8px

.btn-cancel, .reply-cancel
  background: $gray-blue
  &:hover
    background: $gray-blue-dark

.btn-close
  position: absolute
  top: 8px
  right: 8px
  background: url("/images/sprite_3.png") no-repeat -150px -251px
  width: 12px
  height: 12px
  text-decoration: none
  opacity: 1 !important
  -ms-filter: none
  filter: none
  cursor: pointer

.icon-edit:before
  margin-right: 1px
