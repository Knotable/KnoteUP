@media screen and (max-width: 667px)
  body
    font-size: 17px
    & ::-webkit-scrollbar
      display: none

  .loading-title
    font-size: 50px
    margin-top: -60px
    height: initial

  .btn
    padding: 2px 10px
    margin: 0
    font-size: 17px
    line-height: 22px

  [class^="icon-"]:before, [class*=" icon-"]:before
    font-size: 120%

  .not-mobile
    display: none !important

  #share-pad-popup
    padding: 0
    width: 100%
    left: initial !important
    margin-left: initial !important
    *
      font-size: 17px !important
    .share-pad-wrapper
      padding: 20px
      .share-message
      .shared-url
        width: 95%

  .share-popup-header
  .share-content-card-content
  .share-popup-button-content
    font-size: 17px

  #container
    box-shadow: 10px 0 10px 8px #000
    left: 0
    right: initial

    &::-webkit-scrollbar
      display: none

    .header
      .title
        display: block !important

      .divider:after
        margin: 0 20px 5px 10px

    #header
      z-index: 1000

      .user
        right: 10px
      &.scrolling
        box-shadow: 0px 5px 12px -3px rgba(0,0,0,0.45)
      .left-header
      .right-header
        padding: 20px 0
      .left-header
        padding-left: 15px
        .subject
          text-overflow: ellipsis
          white-space: nowrap
          overflow: hidden
        .show-compose
          position: fixed
          bottom: 20px
          right: 20px
          font-size: 27px
          width: 65px
          height: 65px
          line-height: 71px
      .right-header
        padding-right: 15px
      .share-pad-btn
      .login-button
        font-size: 17px
      #setting-dropdown
        right: 15px
        font-size: 17px

    #header .share-pad-btn
    .header .redirect-to-knotable
    .header .subject
      left: 10px

    .header.padItem
      .right-header
        width: 1%
      .left-header
        padding: 0
      .min-k-btn
        margin-left: 10px
      .divider
        display: none
      .title
        width: 85%
        margin: 0
        overflow: hidden
        padding: 0
        transform: translateY(-10%)
        .subject
          font-size: 17px

    #header .share-pad .share-pad-dropdown
    .share-pad .share-pad-dropdown
      right: 0
      left: auto
      li
        font-size: 17px

    .padList
      overflow-x: hidden
      padding: 0 10px
      .knote-list
        max-width: 90vw
      .gutter
        display: none
      .compose
        width: 100%
        margin-bottom: 0
        margin-top: 40px
        padding: 0
        padding-top: 5px
        padding-bottom: 30px
        border: 1px solid $gray-light
        box-shadow: 0 3px 10px -1px rgba(0,0,0,0.33)
        .compose-wrapper
          margin: 10px
          .btn, div
            font-size: 17px
          .attachment form
            margin-right: 17px
      .unarchived-knotes
        margin-top: 30px
      .knote
        margin: 30px auto
        width: 100%
        padding: 30px 0 20px
        border: 1px solid $gray-light
        box-shadow: 0 3px 10px -1px rgba(0,0,0,0.33)
        .contact
          left: 8px
          top: -15px
          .account-avatar
            width: 30px
            height: 30px
            line-height: 30px
        .knote-title
          opacity: 1
          font-size: 17px
        .knote-header
          &:hover
            background-color: initial
          .icon
            padding: 3px
          i
            font-size: 19px
            padding-left: 0
            &:before
              margin: 0 .1em


        .knote-content
          padding: 0 20px
          font-size: 17px
        .knote-gutter
          .btn
            padding: 0px 8px
        .knote-actions
          margin-left: 10px
          height: 30px
        .knote-replys
          padding: 0 10px
          .account-avatar
            width: 23px
            height: 23px
            line-height: 23px
        .pomodoro-container
          right: 3px
          z-index: 999
          .pomodoro-time
            padding: 2px 5px
        .knote-compose-popup-cn
          .contenteditable-wrapper
            padding: 0 10px 10px 10px
          .buttons
            padding-right: 10px
            .btn
              padding: 0px 8px

  .user-modal-container
    width: 90%
  .user-modal.welcome
    .user-modal-container
      max-width: 100vw
      width: 300px
      padding: 0 15px
      .item
        width: 300px
        height: 270px
        .welcome-title.first
          padding: 100px 0
          line-height: 50px
        .welcome-title
          font-size: 30px
        img
          width: 617px
          max-width: initial
        .knoteup
        .slack
          margin: 10px 0
        .slack
          height: 230px
          width: 750px
        #login-box
          margin: 0
          transform: translateY(6%)
        .box
          background-color: $brand-primary

  .box .control-group input[type="text"],
  .box .control-group input[type="email"],
  .box .control-group input[type="password"]
    font-size: 17px
    padding: 10px 6px
    padding-left: 43px

  .box .body .login-form .control-group .login-button
  .box .body #register-form .control-group #create-account
    font-size: 17px

  .share-popup-centered-container
    width: 90%
