body
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;


.pad-container
.link-to-knotable
  width: 60%
  min-width: 600px
  margin: auto
  margin-top: -7px

#pad-subject
  width: 100%;
  overflow: hidden;
  font-size: 20px;
  line-height: 1.3;
  color: #666;
  background: none;
  border: none;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 12px 0;
  padding: 0;

  &:focus
    background-color: #fff


body
  background: url("/images/_bg1.png") repeat left top
  font-size: 12px


.knote-container
  position: relative;
  margin-bottom: 15px;
  background: #fff;
  border: 1px solid #e6e6e6;
  box-shadow: 1px 1px 5px -2px #000

.knote-content
  padding: 9px
  overflow: hidden



.new-knote-title
.knote-title
  padding: 2px 0;
  width: 100%;
  font-size: 16px;
  -webkit-box-shadow: none;
  box-shadow: none;
  border: none;
  resize: none


.counter
  border: 1px solid #eee;
  color: #616161;
  padding: 0 5px;
  font-size: 11px


.counter[data-limit-exceed=true]
  color: #d9534f;
  border: 1px solid #d9534f;
  display: block;


.pull-right
  float: right

:focus
  outline: none


.new-knote-body
  border-top: 1px dashed #ddd
  color: #666;
  cursor: text;
  font-size: 13px;
  line-height: 1.3;
  min-height: 32px;
  padding: 5px 0;

[contenteditable][placeholder]:empty:before
  content: attr(placeholder)
  color: #ccc
  cursor: text

.post-btn-container
  float: right

.post-button
  padding: 3px 18px
  &:disabled
    background: #dddddd


.buttons > *
  display: inline-block;
  vertical-align: middle;
  margin: 5px 0 0 0;


.button
  color: #fff;
  background: #78c5e8;
  margin-bottom: 0;
  font-size: 14px;
  line-height: 20px;
  text-align: center;
  cursor: pointer;
  border: 1px solid rgba(0,0,0,0);
  -webkit-border-radius: 4px;
  border-radius: 4px;
  &:enabled
    &:hover
    &:focus
    &:active
      background-color: #5aa872


.welcome
  text-align: center
  p
    font-size: 24px
    font-weight: 600
    margin-top: 0
  button
    background-color: #337ab7
    margin: -14px 0 0 14px
    padding: 4px 12px


.clearfix:after
  clear: both


.clearfix:before
.clearfix:after
  display: table
  line-height: 0
  content: ""

.knote textarea
  background-color: transparent

.knote
  &:hover
    background-color: #f2f2f2


.knote-date
  font-size: 12px
  display: none


.login-icon
  float: right
  padding: 3px
  font-style: normal


.contact .account-avatar
  color: rgba(255,255,255,0.8);
  font-size: 22px;
  font-weight: bold;
  line-height: 32px;
  text-align: center;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  width: 34px;
  height: 34px;
  display: inline-block;
  vertical-align: top;
  cursor: pointer;
  max-width: none;

  &:hover
    -webkit-box-shadow: 0 0 2px 2px #78c5e8;
    box-shadow: 0 0 2px 2px #78c5e8;

.contact
  left: -17px;
  position: absolute;
  top: -17px;
  text-align: center;
  margin: 0;


.bgcolor1
  background: #ebe18c

.bgcolor2
  background: #dc3f1c

.bgcolor3
  background: #448d7a

.bgcolor4
  background: #d8a027

.bgcolor5
  background: #88a764
